generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  queued
  processing
  completed
  failed
}

enum InputType {
  url
  text
}

model Job {
  id        String    @id @default(uuid())
  inputType InputType
  inputHash String // Hash of input for idempotency and caching
  status    JobStatus @default(queued)

  // Input data (mutually exclusive based on inputType)
  originalUrl  String?
  originalText String?

  // Output data
  summary      String?
  errorMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inputHash])
  @@index([status])
  @@index([createdAt])
  @@map("jobs")
}
